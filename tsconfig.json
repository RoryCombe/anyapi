{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "importHelpers": true,
    "noEmit": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "pretty": false,
    "rootDir": "./src/",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.js", "**/*.spec.ts"]
}
